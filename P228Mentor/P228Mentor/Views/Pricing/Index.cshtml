</div><!-- End Breadcrumbs -->
<!-- ======= Pricing Section ======= -->
<section id="pricing" class="pricing">
    <div class="container" data-aos="fade-up">

        <div class="row">

            @foreach (Pricing pricing in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="box @(pricing.IsFeatured ? "featured":"")">
                        @if (pricing.IsAdvanced)
                        {
                            <span class="advanced">Advanced</span>
                        }
                        <h3>@pricing.Name</h3>
                        <h4><sup>$</sup>@pricing.Price<span> / month</span></h4>
                        <ul>
                            @foreach (Service service in services)
                            {
                                @*if (pricing.PricingServices.Exists(ps => ps.ServiceId == service.Id))
                                {
                                    <li>@service.Name</li>
                                }
                                else
                                {
                                    <li class="na">@service.Name</li>
                                }*@

                                <li class="@(pricing.PricingServices.Exists(ps => ps.ServiceId == service.Id) ? "":"na")">@service.Name</li>
                            }
                        </ul>
                        <div class="btn-wrap">
                            <a href="#" class="btn-buy">Buy Now</a>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</section><!-- End Pricing Section -->